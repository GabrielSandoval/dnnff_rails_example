<p id="notice"><%= notice %></p>

<h1>Bodies</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Weight</th>
      <th>Stature</th>
      <th>Head circumference</th>
      <th>Shoulder breadth</th>
      <th>Hand length</th>
      <th>Hand breadth</th>
      <th>Chest circumference</th>
      <th>Waist circumference</th>
      <th>Foot length</th>
      <th>Foot breadth</th>
      <th>Age</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bodies.each do |body| %>
      <tr>
        <td><%= body.full_name %></td>
        <td><%= body.weight %></td>
        <td><%= body.stature %></td>
        <td><%= body.head_circumference %></td>
        <td><%= body.shoulder_breadth %></td>
        <td><%= body.hand_length %></td>
        <td><%= body.hand_breadth %></td>
        <td><%= body.chest_circumference %></td>
        <td><%= body.waist_circumference %></td>
        <td><%= body.foot_length %></td>
        <td><%= body.foot_breadth %></td>
        <td><%= body.age %></td>
        <td><%= body.gender %></td>
        <td><%= link_to 'Show', body %></td>
        <td><%= link_to 'Edit', edit_body_path(body) %></td>
        <td><%= link_to 'Destroy', body, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

