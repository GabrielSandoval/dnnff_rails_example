<p id="notice"><%= notice %></p>

<h1>Flowers</h1>
<%= link_to "Flower sample data", "https://github.com/mwaskom/seaborn-data/blob/master/iris.csv", target: "_blank" %>

</br>
</br>

<table>
  <thead>
    <tr>
      <th>Sepal length</th>
      <th>Sepal width</th>
      <th>Petal length</th>
      <th>Petal width</th>
      <th>Specie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flowers.each do |flower| %>
      <tr>
        <td><%= flower.sepal_length %></td>
        <td><%= flower.sepal_width %></td>
        <td><%= flower.petal_length %></td>
        <td><%= flower.petal_width %></td>
        <td><%= flower.specie %></td>
        <td><%= link_to 'Show', flower %></td>
        <td><%= link_to 'Edit', edit_flower_path(flower) %></td>
        <td><%= link_to 'Destroy', flower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flower', new_flower_path %>
